
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
<input type="button" id="btn_new" class="btn btn-primary btn-outline btn-xs" value="New" />

<table id="ProductosTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Medida</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Accion</th>

        </tr>
    </thead>
 
</table>
<div id="Dialog_Productos" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 id="tiitle" class="text-primary modal-title"></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="Input_nombre" class="col-sm-2 control-label  text-primary">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Input_nombre" placeholder="Nombre" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Input_Codigo" class="col-sm-2 control-label  text-primary">Codigo</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="Input_Codigo" placeholder="Codigo" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Input_Medida" class="col-sm-2 control-label  text-primary">Medida</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Input_Medida" placeholder="Medida" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Input_Cantidad" class="col-sm-2 control-label  text-primary">Cantidad</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="Input_Cantidad" placeholder="Cantidad" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Input_Precio" class="col-sm-2 control-label  text-primary">Precio</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Input_Precio" placeholder="Precio" />
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <input id="btn_Cancel" type="button" value="Cancel" class="btn btn-outline btn-danger btn-xs" />

                <input type="button" id="btn_Update" class="btn btn-outline btn btn-primary btn-xs" value="Update" />
                <input type="button" id="btn_Save" class="btn btn-outline btn btn-primary btn-xs" value="Guardar" />

            </div>
        </div>
    </div>
</div>

@{
    <script src="https://code.jquery.com/jquery-1.12.4.js"
            integrity="sha256-Qw82+bXyGq6MydymqBxNPYTaUXXq7c8v3CwiYwLLNXU="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/js/Mantenimiento/js.js")"></script>
}


